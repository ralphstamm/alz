<script>
var css = '@media screen and (min-width: 451px){ .banner{ position: fixed; background-color: #ec1d25; z-index: 50; bottom: 0px; display: table-cell; width: 100%; vertical-align: middle; } P.title{ color: white; font-weight: bold; text-align: center; line-height: 0px; margin-top: 1em; margin-bottom: 1em; margin-left: 0; margin-right: 0; } P.text{ color: white; font-weight: bold; text-align: center; font-size: 10px; line-height: 4px; margin-top: 1em; margin-bottom: 1em; margin-left: 0; margin-right: 0; }} @media screen and (max-width: 450px){ .banner-sm{ top : 50px; position: fixed; background-color: #ec1d25; z-index: 50; display: table-cell; width: 100%; vertical-align: middle; } P.title{ color: white; font-weight: bold; text-align: center; line-height: 0px; margin-top: 1em; margin-bottom: 1em; margin-left: 0; margin-right: 0; } P.text{ color: white; font-weight: bold; text-align: center; font-size: 10px; line-height: 4px; margin-top: 1em; margin-bottom: 1em; margin-left: 0; margin-right: 0; }}',
    head = document.head || document.getElementsByTagName('head')[0],
    style = document.createElement('style');

style.type = 'text/css';
if (style.styleSheet){
  // This is required for IE8 and below.
  style.styleSheet.cssText = css;
} else {
  style.appendChild(document.createTextNode(css));
}

head.appendChild(style);
var acodebanner = document.createElement("div");
acodebanner.setAttribute("class", "banner banner-sm");
acodebanner.innerHTML = '<p class="title">JETZT ZUSÄTZLICH CHF 80.– SPAREN</p><p class="text">NACH ABSCHLUSS EINER AUTOVERSICHERUNG</P>'

document.body.appendChild(acodebanner);
</script>
